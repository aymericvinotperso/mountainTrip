<div class="container">
  <h2>Mes Sorties</h2>

  <div class="row">
    <% @trips.each do |trip|  %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= trip.itinerary.picture_url %>');">
        <%= link_to " ", trip_path(trip), class: "card-link" %>
        <div class="card-category card-element-invisible"><%= trip.start_date %></div>
        <div class="card-description">
          <div class="card-infos">
            <h2><%= trip.itinerary.title %></h2>
            <p class="card-comment card-element-invisible"><%= trip.itinerary.content %></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
