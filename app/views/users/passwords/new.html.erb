<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/1659434/pexels-photo-1659434.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');">
  <div class="form-container">
   <!--right form-->
   <div class ="col-xs-12 col-sm-6 col-md-6 col-md-offset-3 ">
    <div class="my-form">
      <div class="my-form-title">
        <h2 class ="text-center">Mot de passe oubliÃ©?</h2>
      </div>
      <div class="my-form-body">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
          label: "Mon email:",
          required: true,
          autofocus: true,
          input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Renvoyer mot de passe",class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>

      <div class="form-footer text-center">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
