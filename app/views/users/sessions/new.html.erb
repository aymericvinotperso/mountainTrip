<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/1271619/pexels-photo-1271619.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500');">
  <div class="form-container">
   <!--right form-->
   <div class ="col-xs-12 col-sm-6 col-md-6 col-md-offset-3 ">
    <div class="my-form">
      <div class="my-form-title">
        <h2 class="text-center">Me connecter </h2>
      </div>
      <div class="my-form-body form-group">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
          label: "Mon email:",
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email" } %>
          <%= f.input :password,
          label: "Mon mot de passe:",
          required: false,
          input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: "Se souvenir de moi?", as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Connexion", class: "btn btn-primary outline" %>
        </div>
        <% end %>
      </div>
      <div class="form-footer text-center">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>

