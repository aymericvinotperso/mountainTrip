<div class="container">
  <div class="flex-container">
   <div class="flex-object">
    <div class="card-iti">
      <%= image_tag @itinerary.picture_url %>
      <div class="card-category">
        <%= @itinerary.activities.join(", ") %>
      </div>
      <div class="card-iti-description card-iti-element-invisible">
        <ul class="list-group">
        <li class="list-group-item trans">
          <h2><%= @itinerary.title %></h2>
          </li>
        <% if @itinerary.diffculty != nil %>
          <li class="list-group-item trans">Difficulté: <%= @itinerary.diffculty %></li>
        <% end %>
        <% if @itinerary.elevation_max != nil %>
          <li class="list-group-item trans">Altitude maximale: <%= @itinerary.elevation_max %>mètres</li>
        <% end %>

        <% if @itinerary.height_diff_up != nil %>
          <li class="list-group-item trans">Dénivelé: <%= @itinerary.height_diff_up %>mètres</li>
        <% end %>

        <% if @itinerary.number_of_outings != nil %>
          <li class="list-group-item trans">Outings: <%= @itinerary.number_of_outings %></li>
        <% end %>
      </ul>
      </div>
      <div>
        <%= link_to('Créer une sortie', new_itinerary_trip_path(@itinerary), class: "btn btn-primary card-button btn-lg outline") %>
      </div>
    </div>
  </div>
  <div class="flex-object description">
    <h4>Description</h4>
    <p>
      <%= @itinerary.content %>
    </p>
  </div>
  <div class="flex-object">
    <h4>3D Map</h4>
    <iframe src=<%= "https://fatmap.com/@#{@itinerary.coord_lat},#{@itinerary.coord_long},#{@itinerary.elevation_max},-35.9049826,92.6848191,2388.9221056,normal" %> frameborder="" allowfullscreen="" width="100%" height="600"></iframe>
  </div>
</div>
</div>


