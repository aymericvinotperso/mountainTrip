<div class="container">
  <div class="flex-container">
   <div class="flex-object">
    <div class="card-iti">
      <%= image_tag @itinerary.picture_url %>
      <div class="card-category">
        <%= @itinerary.activities.join(", ") %>
      </div>
      <div class="card-iti-description card-iti-element-invisible">
        <h2><%= @itinerary.title %></h2>
        <p>Difficulté: <%= @itinerary.diffculty %></p>
        <p>Altitude maximale: <%= @itinerary.elevation_max %>m</p>
        <p>Dénivelé: <%= @itinerary.height_diff_up %>m</p>
        <p>Outings: <%= @itinerary.number_of_outings %></p>

      </div>
      <div>
        <%= link_to('Créer une sortie', new_itinerary_trip_path(@itinerary), class: "btn btn-primary card-button") %>
      </div>
    </div>
  </div>
  <div class="flex-object description">
    <h4>Description</h4>
    <%= render "description" %>
  </div>
  <div class="flex-object">
    <h4>3D Map</h4>
    <iframe src=<%= "https://fatmap.com/@#{@itinerary.coord_lat},#{@itinerary.coord_long},#{@itinerary.elevation_max},-35.9049826,92.6848191,2388.9221056,normal" %> frameborder="" allowfullscreen="" width="100%" height="600"></iframe>
  </div>
</div>
</div>


